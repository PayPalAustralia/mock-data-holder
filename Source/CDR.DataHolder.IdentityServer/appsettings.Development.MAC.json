{
	"ConnectionStrings": {
		"IdentityServerStoreDatabase": "Data Source=/tmp/cdr/idsvr.db",
		"ResourceDatabase": "Data Source=/tmp/cdr/mdh.db"
	},
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft": "Warning",
			"Microsoft.Hosting.Lifetime": "Information"
		}
	},
	"Serilog": {
		"Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
		"MinimumLevel": "Verbose",
		"WriteTo": [
			{ "Name": "Console" },
			{
				"Name": "File",
				"Args": {
					"path": "/tmp/cdr/Logs/cdr-mdh-identityserver.log",
					"rollingInterval": "Day",
					"rollOnFileSizeLimit": true,
					"fileSizeLimitBytes": "1000000"
				}
			}
		],
		"Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
		"Properties": {
			"Application": "CDR.DataHolder.IdentityServer"
		}
	}
}